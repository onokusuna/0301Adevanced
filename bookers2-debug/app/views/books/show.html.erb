<div class="row">
	<% if @books.errors.any? %>
	<h3><%= @books.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @books.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
	<% end %>

	<div class="col-xs-3">

	<h2>User info</h2>
	<%= render 'users/profile', user: @user %>
	<!--同コントローラーのviewで表示ならusersは省略可 -->

	<h2>New book</h2>
	<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<!-- 自他ユーザーで表示を分岐 -->
		<% if user_signed_in? && current_user == @user %><!-- a&&b=aとbが共に真の場合に真 id不要-->
		<!--マイページ(編集や削除ができる)-->
		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				</tr>
			</table>

			<% else %><!-- a&&b=aとbが共に真の場合に真ではない場合 -->
			 <!--他の人のページ(編集や削除はできない)-->
			<table class="table">
				<tbody>
					<tr>
						<!-- セル１ -->
						<td><%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= link_to @user.name, user_path(@user) %>
						</td>
						<!-- セル２ -->
						<td><%= link_to @book.title, book_path(@book) %></td>
						<!-- セル３ -->
						<td><%= @book.body %></td>
					</tr>
				</tbody>
			</table>

			<% end %>

	</div>
</div>

